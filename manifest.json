{
  "manifest_version": 3,
  "name": "ACC Review Stamp Tool",
  "version": "1.0",
  "permissions": ["storage", "identity", "activeTab", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}